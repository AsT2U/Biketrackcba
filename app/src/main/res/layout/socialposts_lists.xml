<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:background="@drawable/forsocial_box"
            android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/fetchRecyclerView"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_below="@id/fetchRecyclerView"
                android:text="loading.."
                android:id="@+id/userpostsocial"/>
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forsocial_box1"
        android:layout_marginBottom="25dp"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Loading.."
        android:paddingTop="10dp"
        android:paddingStart="15dp"

        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:id="@+id/titleofpost"/>
        <TextView
            android:paddingStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Description: "/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/bodyofpost"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:paddingBottom="20dp"
        android:paddingStart="15dp"
        android:text="Loading.."
        android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>