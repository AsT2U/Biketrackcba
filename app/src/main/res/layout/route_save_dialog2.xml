<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDialogContainer2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"


    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/layoutDialogContainer2"
        android:id="@+id/layoutDialog"
        android:background="@drawable/custom_dialogbox">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Vtext_title"
            android:background="@color/greenWarning"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:text="Save Route"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_save_24"
            android:id="@+id/imageSaveicon"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/Vtext_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/Vtext_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Vtext_FirstDesc"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Set Title and Description of your Route: "
            app:layout_constraintTop_toBottomOf="@id/Vtext_title"
            app:layout_constraintBottom_toTopOf="@id/title_edit_Route"
            />
        <EditText
            android:id="@+id/title_edit_Route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            android:hint="Title"
            android:inputType="text"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/Vtext_FirstDesc"
            app:layout_constraintBottom_toTopOf="@id/desc_edit_Route"/>
        <EditText
            android:id="@+id/desc_edit_Route"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:ems="10"
            android:gravity="start|top"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custom_edittext"
            android:padding="10dp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="435dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintTop_toBottomOf="@id/title_edit_Route"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/buttonSaveAction2"
        android:layout_marginStart="40dp"
        android:text="Save"
        android:backgroundTint="@color/greenWarning"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/layoutDialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonCancelAction2"
        app:layout_constraintTop_toBottomOf="@id/layoutDialog"
        android:textSize="15sp"
        android:textColor="@color/white"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:id="@+id/buttonCancelAction2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:text="Cancel"
        android:radius="12dp"

        android:backgroundTint="@color/red"
        app:layout_constraintBottom_toBottomOf="@id/layoutDialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/buttonSaveAction2"
        app:layout_constraintTop_toBottomOf="@id/layoutDialog"
        android:textSize="15sp"
        android:textColor="@color/white"/>


</androidx.constraintlayout.widget.ConstraintLayout>